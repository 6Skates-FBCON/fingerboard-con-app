{
  "expo": {
    "name": "Fingerboard Con",
    "slug": "fingerboard-con",
    "version": "2.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sixskates.fingerboardcon",
      "buildNumber": "201",
      "icon": "./assets/images/icon.png",
      "infoPlist": {
        "NSCameraUsageDescription": "We use your camera so you can record fingerboard clips for the event.",
        "NSMicrophoneUsageDescription": "We use your microphone to capture audio while recording clips.",
        "NSPhotoLibraryUsageDescription": "We access your photo library so you can pick clips for upload.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },

    "android": {
      "package": "com.sixskates.fingerboardcon",
      "versionCode": 201,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },

    "web": {
      "bundler": "metro",
      "output": "static"
    },

    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Fingerboard Con to use the camera to record clips."
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow Fingerboard Con to use the microphone while recording."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Fingerboard Con to access your photos for uploads."
        }
      ]
    ],

    "experiments": {
      "typedRoutes": true
    },

    "extra": {
      "router": {},
      "eas": {
        "projectId": "007abce3-7c10-4267-874e-2d0709de130b"
      }
    },

    "runtimeVersion": {
      "policy": "appVersion"
    },

    "updates": {
      "url": "https://u.expo.dev/007abce3-7c10-4267-874e-2d0709de130b"
    }
  }
}
